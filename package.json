{
  "name": "planning-poker-server",
  "version": "1.0.0",
  "scripts": {
    "client": "cd client && yarn start",
    "server": "webpack --config webpack.server.config.js && nodemon lib.node.js",
    "dev": "concurrently --kill-others-on-fail \"yarn server\" \"yarn client\"",
    "start": "cd dist && node lib.node.js",
    "test": "test -u",
    "heroku-postbuild": "webpack --config webpack.server.config.js && cd client && npm install && npm install --only=dev --no-shrinkwrap && npm run build ",
    "precommit": "lint-staged",
    "prepush": "CI=true yarn test",
    "webpack": "webpack --config webpack.server.config.js"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "crypto": "^1.0.1",
    "date-and-time": "^0.6.3",
    "express": "^4.16.4",
    "jira-connector": "^2.9.0",
    "lodash": "^4.17.11",
    "socket.io": "^2.1.1",
    "uuid": "^3.3.2",
    "webpack-node-externals": "^1.7.2"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-stage-2": "^6.24.1",
    "concurrently": "^4.0.1",
    "eslint": "^5.9.0",
    "eslint-plugin-react": "^7.11.1",
    "husky": "^1.1.3",
    "lint-staged": "^8.0.4",
    "webpack": "^4.25.1",
    "webpack-cli": "^3.1.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "client/*.js": [
      "eslint --fix",
      "git add"
    ],
    "client/**/*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "jest": {
    "modulePaths": [
      "<rootDir>/client/src",
      "<rootDir>/client",
      "<rootDir>"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ]
  }
}
